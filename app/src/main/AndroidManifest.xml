<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="donelist.lerndroid.com.donelist">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CausesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewCauseActivity"
            android:parentActivityName=".CausesActivity"/>
        <activity android:name=".CauseActivity"
            android:parentActivityName=".CausesActivity"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/LoginActivityThame"/>
        <activity android:name=".SignUpActivity"
            android:theme="@style/LoginActivityThame"/>

    </application>

</manifest>